<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#4a4069"
    android:id="@+id/layBase">



    <com.facebook.ads.NativeAdLayout
        android:id="@+id/nativebanner"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_add"
        android:padding="2dp" />


    <ScrollView
        android:layout_below="@id/nativebanner"
        android:layout_above="@id/mybanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#655dc7"
                    android:id="@+id/cricketscore"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="7dp"
                    android:layout_width="@dimen/card_width_large"
                    android:layout_height="@dimen/card_height_small"
                    android:layout_margin="@dimen/medium_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/image_size"
                            android:layout_height="@dimen/image_size"
                            android:background="@drawable/meter"
                            android:padding="@dimen/medium_padding"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="15sp"
                            android:text="Go To Check Cibil Score"
                            tools:ignore="HardcodedText" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#fff"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Click Here to Live Score "
                            android:padding="@dimen/small_padding"
                            android:textColor="@android:color/darker_gray"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/aboutus"
                    app:cardBackgroundColor="#54517b"
                    app:cardCornerRadius="5dp"
                    android:elevation="4dp"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_margin="@dimen/medium_margin"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#4a90e2"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="30sp"
                            android:layout_marginEnd="40sp"/>
                        <TextView
                            android:text = "About Us"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:text = "Know About Me"
                            android:layout_marginStart="30dp"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,SmallSp" />

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="right"
                            android:background="@drawable/more"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/share"
                    app:cardBackgroundColor="#54517b"
                    app:cardCornerRadius="5dp"
                    android:elevation="4dp"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_margin="@dimen/medium_margin"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#e24ab8"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="30sp"
                            android:layout_marginEnd="80sp"/>
                        <TextView
                            android:text = "Share"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:text = "Whould you Like us"
                            android:layout_marginStart="30dp"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,SmallSp" />

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="right"
                            android:background="@drawable/shareus"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/rate"
                    app:cardBackgroundColor="#54517b"
                    app:cardCornerRadius="5dp"
                    android:elevation="4dp"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_margin="@dimen/medium_margin"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#f5a623"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="30sp"
                            android:layout_marginEnd="20sp"/>
                        <TextView
                            android:text = "Rate Us"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:text = "Give 5 Star Ratting"
                            android:layout_marginStart="30dp"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,SmallSp" />

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="right"
                            android:background="@drawable/rate"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
                            android:contentDescription="TODO" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/privacy"
                    app:cardBackgroundColor="#54517b"
                    app:cardCornerRadius="5dp"
                    android:elevation="4dp"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_margin="@dimen/medium_margin"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#3bb967"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="30sp"
                            android:layout_marginEnd="45sp"/>
                        <TextView
                            android:text = "Privacy"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:text = "Our Privacy Policy"
                            android:layout_marginStart="30dp"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,SmallSp" />

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="right"
                            android:background="@drawable/privacy"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <RelativeLayout
        android:id="@+id/mybanner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:background="@drawable/border_add"
        />

</RelativeLayout>